{
  "name": "@fujia/hammer",
  "version": "0.5.4",
  "description": "A modern JavaScript utility library",
  "keywords": [
    "hammer",
    "JavaScript",
    "Node.js",
    "library"
  ],
  "author": {
    "name": "fujia",
    "url": "https://github.com/fushenguang",
    "email": "fujia.site@outlook.com"
  },
  "main": "dist/index.js",
  "module": "dist/@fujia/hammer.esm.js",
  "esnext": "dist/@fujia/hammer.esnext.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fujia-dev/hammer.git"
  },
  "scripts": {
    "lint": "eslint --ext ts 'src/**/*.ts'",
    "docs": "typedoc",
    "docs:publish": "sh scripts/docs-publish.sh",
    "build": "rimraf dist && tsc --module commonjs && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "scripts/gh-pages-publish.js",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "prepare": "husky install",
    "travis-deploy-once": "travis-deploy-once",
    "prerelease": "npm run build",
    "release": "sh scripts/release.sh"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint"
    ]
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "colors": "^1.4.0",
    "commitizen": "^4.2.4",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-config": "^27.3.1",
    "lint-staged": "^12.1.2",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.4.1",
    "prompt": "^1.2.0",
    "replace-in-file": "^6.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.0",
    "shelljs": "^0.8.4",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.9",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  }
}
